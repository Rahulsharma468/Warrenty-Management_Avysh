 <table class="table table-striped mt-5">
    <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Category</th>
            <th>Quantity</th>
            <th>Description</th>
            <th>Image</th>
            <th></th>
        </tr>
    </thead>
       
    {{#each products}}
        <tbody>
            <tr>
                <td> {{name}} </td>
                <td> {{price}} </td>
                <td> {{category}} </td>
                <td> {{quantity}} </td>
                <td> {{description}} </td>
                {{#with image}}
                    <td> <img src="data:image/jpeg;base64,{{this.data}}" id="product-img" width="100px" height="100px" alt="..."></td>
                {{/with}}
                <td> <div class="mx-3 pb-3">
                        <form action="/product/{{_id}}?_method=DELETE" method="POST">
                            <a href="/product/{{_id}}/edit" class="btn btn-primary mr-1">Edit</a>
                            <button class="btn btn-outline-danger">Remove</button>
                        </form>
                    </div>
                </td>
            </tr>
            {{else}}
                <h1 style="text-align: center; color: black">No Products registered</h1>
        </tbody>
    {{/each}}
</table>