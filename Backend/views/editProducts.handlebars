<h1 style="text-align: center; color: black" class="mt-4">Products</h1>
<div class="jumbotron">

    <form action="/product/{{result._id}}/update?_method=PUT" method="post" role="form" enctype="multipart/form-data">
        <div class="form-floating mb-3 mt-4">
            <div class="form-group">
            <label for="image">Product Image *</label>
            <input type="file" class="form-control-file" id="image" value="{{result.image}}" name="file">
        </div>
            {{!-- <div class="custom-file">
                <input type="file" class="custom-file-input" id="image" name="image">
                <label class="custom-file-label" for="image">Product Image *</label>
            </div> --}}
        </div>

        <div class="form-floating mb-3 mt-4">
            <input type="text" class="form-control" value="{{result.name}}" id="name" name="name" placeholder="Product Name" />
            <label for="name">Product Name *</label>
        </div>

        <div class="form-floating mb-3 mt-4">
            <input type="number" class="form-control" id="price" value="{{result.price}}" name="price" placeholder="Product Price" />
            <label for="price">Product Price *</label>
        </div>

        <div class="form-floating mb-3 mt-4">
            <input type="text" class="form-control" id="category" name="category" value="{{result.category}}" placeholder="Product Category" />
            <label for="category">Product Category *</label>
        </div>

        <div class="form-floating mb-3 mt-4">
            <input type="number" class="form-control" id="quantity" name="quantity" value="{{result.quantity}}" placeholder="Product Quantity" />
            <label for="quantity">Product Quantity *</label>
        </div>

        <div class="form-floating mb-3 mt-4">
            <input type="text" class="form-control" id="description" name="description" value="{{result.description}}" placeholder="Product Description" />
            <label for="description">Product Description *</label>
        </div>
        
        <div class="text-center" >
               <button type="submit" class="btn btn-secondary">Update</button>
        </div>
    </form>
</div>
